<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/weather_widget_row"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/widget_listitem_icon"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:contentDescription="WeatherIcon"
        android:scaleType="fitXY" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="3"
        android:paddingTop="25dp"
        android:paddingBottom="25dp"
        android:paddingStart="20dp">
        <TextView
            android:id="@+id/widget_listitem_time"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:textColor="@color/brightwhite" />

        <TextView
            android:id="@+id/widget_listitem_temperature"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:textColor="@color/brightwhite" />

        <TextView
            android:id="@+id/widget_listitem_rain"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:textColor="@color/brightwhite" />
    </LinearLayout>
</LinearLayout>